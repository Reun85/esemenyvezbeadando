<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RobotPigs.View.LoadGamePage"
             xmlns:local="clr-namespace:RobotPigs.ViewModel"
             
             Title="Előző játék folytatása">
    <ListView ItemsSource="{Binding StoredGames}">
        <ListView.ItemTemplate>
            <DataTemplate x:DataType="local:StoredGameViewModel">
                <TextCell
                    Text="{Binding Name}"
                    TextColor="{AppThemeBinding Light={StaticResource Gray900}, Dark={StaticResource White}}"
                    Detail="{Binding Modified}"
                    Command="{Binding LoadGameCommand}"
                    CommandParameter="{Binding Name}" />
            </DataTemplate>
        </ListView.ItemTemplate>
    </ListView>
</ContentPage>